    script.
    
        if(window.location.pathname == "/ourpeople" || window.location.pathname == "/ourhistory") {
            document.getElementById("/aboutus2").className = document.getElementById("/aboutus2").className + " selected"
            
        } else {
            document.getElementById(window.location.pathname + "2").className = document.getElementById(window.location.pathname + "2").className + " selected"
        }
        
    
    .navbutton-dropdown(id="navbutton-dropdown")
        a.navbutton-dropdown-button(href="/ourpeople") Our People
        a.navbutton-dropdown-button(href="/ourhistory") Our History
    
    script.
    
        if(window.location.pathname == "/ourpeople" || window.location.pathname == "/ourhistory") {
            document.getElementById("/aboutus").className = document.getElementById("/aboutus").className + " selected"
            document.getElementById("/aboutus2").className = document.getElementById("/aboutus2").className + " selected"
            
        } else {
            document.getElementById(window.location.pathname).className = document.getElementById(window.location.pathname).className + " selected"
            document.getElementById(window.location.pathname + "2").className = document.getElementById(window.location.pathname + "2").className + " selected"
        }
            
        
        $('.hasdropdown').hover( function() {
            $($(this)).append( $('#navbutton-dropdown') );
            
            if($(this).attr('id') == 'products' || $(this).attr('id') == 'products2') {
                document.getElementById("navbutton-dropdown").innerHTML = 
                    '<a href="/products" class="navbutton-dropdown-button">Variable Frequency Drives</a>' +
                    '<a href="/products" class="navbutton-dropdown-button">Soft Starters</a>' +
                    '<a href="/products" class="navbutton-dropdown-button">Horner PLCs</a>' +
                    '<a href="/products" class="navbutton-dropdown-button">GSM Control</a>' +
                    '<a href="/products" class="navbutton-dropdown-button">Logic Relays</a>' +
                    '<a href="/products" class="navbutton-dropdown-button">Power Factor Corretion</a>' +
                    '<a href="/products" class="navbutton-dropdown-button">Pressure Transducers</a>' +
                    '<a href="/products" class="navbutton-dropdown-button">Harmonic Filters</a>';
                document.getElementById("navbutton-dropdown").style.textAlign = 'left';
            } else if($(this).attr('id') == 'aboutus' || $(this).attr('id') == 'aboutus2') {
                document.getElementById("navbutton-dropdown").innerHTML = "";
                if(window.location.pathname == "/ourpeople") document.getElementById("navbutton-dropdown").innerHTML += '<a href="/ourpeople" class="navbutton-dropdown-button" style="color: var(--green) !important;">Our People</a>';
                else document.getElementById("navbutton-dropdown").innerHTML += '<a href="/ourpeople" class="navbutton-dropdown-button">Our People</a>';
                if(window.location.pathname == "/ourhistory") document.getElementById("navbutton-dropdown").innerHTML += '<a href="/ourhistory" class="navbutton-dropdown-button" style="color: var(--green) !important;">Our History</a>';
                else document.getElementById("navbutton-dropdown").innerHTML += '<a href="/ourhistory" class="navbutton-dropdown-button">Our History</a>';
                document.getElementById("navbutton-dropdown").style.textAlign = 'center';
            }
            
            if($(this).attr('id') == 'aboutus2' || $(this).attr('id') == 'products2') {
                document.getElementById("navbutton-dropdown").style.top = 'auto';
                document.getElementById("navbutton-dropdown").style.bottom = '100%';
                document.getElementById("navbutton-dropdown").style.paddingBottom = '0px';
                document.getElementById("navbutton-dropdown").style.paddingTop = '8px';
            } else {
                document.getElementById("navbutton-dropdown").style.top = '100%';
                document.getElementById("navbutton-dropdown").style.bottom = 'auto';
                document.getElementById("navbutton-dropdown").style.paddingBottom = '8px';
                document.getElementById("navbutton-dropdown").style.paddingTop = '0px';
            }
            document.getElementById("navbutton-dropdown").style.display = "inline-block";
            
        }, function() {
            document.getElementById("navbutton-dropdown").style.display = "none";
        });
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
